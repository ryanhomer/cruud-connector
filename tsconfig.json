{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "tmp",
    "rootDir": "src",
    "skipLibCheck": false,
    "strict": true
  },
  "exclude": ["docs", "dist", "node_modules", "tmp", "*.ts", "**/*.test.*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "hideGenerator": true,
    "includeVersion": true,
    "out": "docs"
  }
}
