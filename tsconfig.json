{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "es2019"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["dist", "node_modules", "*.ts", "**/*.test.*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "hideGenerator": true,
    "includeVersion": true,
    "out": "docs"
  }
}
